<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#a888"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="10dp">

    <SeekBar
        android:id="@+id/SDL_playCtrl_seekBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:max="100"
        android:progress="0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/SDL_playCtrl_tv_curTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:12:23"
                android:textColor="#fff"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="#fff"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/SDL_playCtrl_tv_totalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:12:23"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/SDL_playCtrl_btn_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂停"
                android:textColor="#000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/SDL_playCtrl_btn_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止"
                android:textColor="#000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/SDL_playCtrl_btn_screenShot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="截图"
                android:textColor="#000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/SDL_playCtrl_btn_shareScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始同屏"
                android:textColor="#000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/SDL_playCtrl_btn_stopShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止同屏"
                android:textColor="#000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/SDL_playCtrl_btn_startProjection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始投影"
                android:textColor="#000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/SDL_playCtrl_btn_stopProjection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止投影"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>