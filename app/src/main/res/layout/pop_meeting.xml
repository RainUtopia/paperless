<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/keyboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/keyboard"
            android:gravity="center"
            android:text="软键盘"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/handwritten"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/writingboard"
            android:gravity="center"
            android:text="手写"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/screens"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/screenshot"
            android:gravity="center"
            android:text="桌面截图"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/one_screen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/sscreen"
            android:gravity="center"
            android:text="同屏控制"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/back_pop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/back_pop"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/projection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/projective"
            android:gravity="center"
            android:text="投影控制"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/note"
            android:gravity="center"
            android:text="会议笔记"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/call_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/service"
            android:gravity="center"
            android:text="呼叫服务"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/whiteplate_pop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/multipostil"
            android:gravity="center"
            android:text="电子白板"
            android:textColor="@color/white" />
    </LinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>