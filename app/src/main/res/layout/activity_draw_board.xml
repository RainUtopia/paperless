<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="100%">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="100%">

            <ImageView
                android:id="@+id/pen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/select_left"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/select_pen" />


            <ImageView
                android:id="@+id/eraser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/select_mid"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/select_eraser" />


            <ImageView
                android:id="@+id/palette"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/select_press"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/select_palette" />

            <ImageView
                android:id="@+id/text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/select_press"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/select_text" />

            <ImageView
                android:id="@+id/pic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/select_press"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/select_pic" />

            <ImageView
                android:id="@+id/sline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/select_mid"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/select_sline" />

            <ImageView
                android:id="@+id/curve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/select_mid"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/select_curve" />

            <ImageView
                android:id="@+id/ellpse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/select_mid"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/select_ellpse" />

            <ImageView
                android:id="@+id/rect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/select_mid"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/select_rect" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/select_press"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/select_back" />

            <ImageView
                android:id="@+id/clean"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/select_right"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/select_clean" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_heightPercent="50%">

            <SeekBar
                android:id="@+id/seb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="100"
                android:progress="3" />

            <ImageView
                android:id="@+id/color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round"
                android:clickable="true" />

            <ImageView
                android:id="@+id/color_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round"
                android:clickable="true" />

            <ImageView
                android:id="@+id/color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round"
                android:clickable="true" />

            <ImageView
                android:id="@+id/color_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round"
                android:clickable="true" />

            <ImageView
                android:id="@+id/color_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round"
                android:clickable="true" />

            <ImageView
                android:id="@+id/color_brown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round"
                android:clickable="true" />

            <ImageView
                android:id="@+id/color_purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round"
                android:clickable="true" />

            <ImageView
                android:id="@+id/color_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round"
                android:clickable="true" />

            <ImageView
                android:id="@+id/color_cyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round"
                android:clickable="true" />

            <ImageView
                android:id="@+id/color_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round"
                android:clickable="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/share_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_guide"
                    android:text="共享批注" />

                <Button
                    android:id="@+id/share_stop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_guide"
                    android:text="停止共享" />

                <Button
                    android:id="@+id/save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_guide"
                    android:text="保存" />

                <Button
                    android:id="@+id/exit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn_guide"
                    android:text="退出" />
            </LinearLayout>
        </LinearLayout>


    </com.zhy.android.percent.support.PercentLinearLayout>


    <!--<com.pa.paperless.views.DrawingBoard-->
        <!--android:id="@+id/my_drawingboard"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--app:layout_heightPercent="70%"-->
        <!--app:layout_widthPercent="100%" />-->

    <com.pa.paperless.views.PaletteView
        android:id="@+id/my_drawingboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="68%"
        app:layout_widthPercent="100%" />


</com.zhy.android.percent.support.PercentLinearLayout>
