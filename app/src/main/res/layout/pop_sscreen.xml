<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="同屏控制" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/dialogmodule"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="模式" />

                <CheckBox
                    android:layout_marginTop="5dp"
                    android:id="@+id/everyone_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:button="@drawable/select_check"
                    android:text="所有人        " />

                <CheckBox
                    android:id="@+id/players"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:button="@drawable/select_check"
                    android:text="选择参与人" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/dialogmodule"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投影" />

                <CheckBox
                    android:layout_marginTop="5dp"
                    android:id="@+id/all_projector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:button="@drawable/select_check"
                    android:text="所有投影机" />

                <CheckBox
                    android:id="@+id/choose_projector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:button="@drawable/select_check"
                    android:text="选择投影机" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/screens_btn"
                android:text="同屏控制"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:background="@drawable/select_press"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/stop_btn"
                android:text="停止同屏"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:background="@drawable/select_press"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/join_btn"
                android:text="加入同屏"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/select_press"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_enter"
            android:text="取消" />


    </LinearLayout>
</LinearLayout>