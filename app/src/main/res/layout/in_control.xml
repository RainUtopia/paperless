<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/topbar3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="10%">

        <Button
            android:id="@+id/device_control"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="设备控制" />

        <Button
            android:id="@+id/vote_management"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="投票管理" />

        <Button
            android:id="@+id/meeting_communication"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="会议交流" />

        <Button
            android:id="@+id/camera_control"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="摄像机控制" />

        <Button
            android:id="@+id/four_points"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="四分屏管理" />

        <Button
            android:id="@+id/split_screen_management"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="屏幕管理" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/in_control_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</com.zhy.android.percent.support.PercentLinearLayout>