<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/popTitleBackColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="2dp"
            android:text="会议笔记"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_note"
            style="@style/EdtTextTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/popEditTextColor"
            android:enabled="true"
            android:gravity="top"
            android:minLines="10" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/note_import"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0.2dp"
            android:layout_weight="1"
            android:text="导入" />

        <Button
            android:id="@+id/note_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0.2dp"
            android:layout_weight="1"
            android:text="本地保存" />

        <Button
            android:id="@+id/note_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.2dp"
            android:layout_weight="1"
            android:text="返回" />
    </LinearLayout>
</LinearLayout>