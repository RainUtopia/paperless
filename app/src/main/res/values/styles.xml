<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 主页自定义属性 -->
    <style name="TextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- 进入会议页面左边列表字体样式 -->
    <style name="TextStyle_Left">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextTwentyAndBlack">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- popupWindow 打开关闭的动画 -->
    <style name="AnimHorizontal" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophide_anim</item>
    </style>
    <!--会议笔记输入框字体大小-->
    <style name="EdtTextTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--表格样式-->
    <style name="tableViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">0.5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--PopupWindow进入退出动画-->
    <style name="Anim_PopupWindow">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>
    <!--文档批注界面 按钮样式-->
    <style name="postil_button">
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:layout_margin">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/select_press</item>
    </style>
    <!--输入IP地址弹出框-->
    <style name="ipPopEdt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ip_edt</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
    </style>
    <!--输入IP地址弹出框-->
    <style name="ipPopTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:text">.</item>
    </style>
    <!--会议界面 左边底部的Fragment-->
    <style name="MeetBottomImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--视屏直播页面四个按钮-->
    <style name="VideoFragmentBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_shape_video</item>
    </style>
</resources>
