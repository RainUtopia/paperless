<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pa.paperless">

    <!-- 文件的读写权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 向SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 账号密码检查权限 -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 访问网络状态权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 唤醒和锁屏权限 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 录音权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 访问wifi权限 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 修改音频参数权限 -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!-- 摄像头权限 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 关闭硬件加速:android:hardwareAccelerated="false" -->
    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- singTop:避免点两次是弹出两次 -->
        <!-- singTask:当点击时会先判断，如果有其它任务则会先干掉 -->
        <!-- android:windowSoftInputMode="adjustPan" 解决:软件盘压缩整个window，导致输入框部分被压缩。 -->
        <activity
            android:name=".activity.MeetingActivity"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".activity.ManageActivity"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        <activity
            android:name=".activity.PermissionActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.DirPermissionActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.ScreenShotActivity" />
        <activity
            android:name="org.libsdl.app.SDLActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="landscape" />
        <activity android:name=".activity.PeletteActivity"
            android:screenOrientation="landscape"/>
        <service android:name=".service.PlayService"/>
    </application>

</manifest>